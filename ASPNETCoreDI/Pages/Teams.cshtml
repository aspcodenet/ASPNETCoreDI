@page
@model ASPNETCoreDI.Pages.TeamsModel
@{
}


<h1>Teams</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model.Teams)
        {
            <tr>
                <td>@team.Name</td>
                <td>
                    <a class="btn btn-primary" asp-page="/Team" asp-route-id="@team.Id">
                        View team
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
